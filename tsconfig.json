{
  "compilerOptions": {
    "jsx": "react-jsx",
    "outDir": "dist",
    "module": "NodeNext",
    "target": "ES2022",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "moduleResolution": "NodeNext",
    "allowJs": false,
    "strict": true
  },
  "include": [
    "server", 
    "resume-parser",
    "global.d.ts",
    "components/**/*",
    "lib/**/*",
    "server/**/*",
    "resume-parser/**/*",
    "page.tsx"],
   "exclude": [
    "node_modules", 
    "public", 
    "lib/__tests__", 
    "lib/**/*.test.ts", 
    "lib/**/*.test.tsx", 
    "**/__tests__/**"
  ]
}
